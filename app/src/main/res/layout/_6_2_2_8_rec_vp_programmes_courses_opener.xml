<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_inst_loader_vp_programmes_level"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_standard">

    <View
        android:id="@+id/v_inst_loader_vp_programmes_level"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFFFF"
        android:minHeight="200dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorAppMain">

        <TextView
            android:id="@+id/lbl_inst_loader_vp_programmes_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_short"
            android:paddingEnd="@dimen/margin_standard"
            android:paddingStart="@dimen/margin_standard"
            android:paddingTop="@dimen/margin_short"
            android:text="SEM-1"
            android:textAlignment="center"
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/l_programmes_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_marginTop="@dimen/margin_standard"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_inst_loader_vp_programmes_courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>