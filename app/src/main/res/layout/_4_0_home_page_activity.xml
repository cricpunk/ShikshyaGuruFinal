<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/home_page_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

    <fragment
        android:id="@+id/home_page_nav_view"
        android:name="com.shikshyaguru.shikshyaguru._4_home_page_activity.views.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/drawer_right_margin"
        android:layout_marginRight="@dimen/drawer_right_margin"
        app:layout="@layout/_4_6_navigation_drawer_fragment"
        tools:layout="@layout/_4_6_navigation_drawer_fragment" />

</android.support.v4.widget.DrawerLayout>

