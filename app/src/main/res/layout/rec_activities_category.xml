<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_activities_category_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/lbl_inst_loader_vp_activities_category"
        android:layout_marginLeft="@dimen/margin_extra_short"
        android:layout_marginRight="@dimen/margin_extra_short"
        android:background="@drawable/radius_all_corner" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_activities_category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_inst_loader_vp_activities_category"
        android:layout_marginTop="@dimen/margin_standard"
        android:paddingBottom="30dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/lbl_inst_loader_vp_activities_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/shape_top_radius"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_short"
        android:paddingLeft="@dimen/margin_28dp"
        android:paddingRight="@dimen/margin_28dp"
        android:paddingTop="@dimen/margin_short"
        android:text="@string/csr"
        android:textColor="#FAFAFA"
        android:textSize="16sp" />


</RelativeLayout>