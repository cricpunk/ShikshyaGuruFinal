<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@+id/lbl_inst_loader_vp_activities_category"
    android:layout_marginLeft="@dimen/margin_standard"
    android:layout_marginRight="@dimen/margin_standard"
    android:layout_marginTop="@dimen/margin_standard"
    app:cardBackgroundColor="@color/colorCardViewBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_activities_category_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/model6"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/lbl_activities_category_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#BF212121"
            android:paddingBottom="@dimen/margin_extra_short"
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            android:paddingTop="@dimen/margin_extra_short"
            android:text="@string/short_demo"
            android:textColor="#FAFAFA" />

    </RelativeLayout>

</android.support.v7.widget.CardView>