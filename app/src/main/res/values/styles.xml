<resources>

    <!--Theme 1.    Splash screen-->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/black70</item>
    </style>

    <!--Theme 2.    Theme for Well come activity-->
    <style name="WellComeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Theme 3.    Sign up login screen-->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAppMain</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <!--Theme 4.    Same status and nav bar color-->
    <style name="NavStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/statusBarColor</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!--Theme 5.    Search tool bar theme-->

    <!--Theme 6.    Observable scroll blue_toolbar theme-->

    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAppMain</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="cardViewMarginShort">
        <item name="android:layout_marginLeft">@dimen/margin_short</item>
        <item name="android:layout_marginRight">@dimen/margin_short</item>
        <item name="android:layout_marginBottom">@dimen/margin_short</item>
    </style>

    <style name="leftRightStandard">
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
    </style>

    <style name="leftRightPaddingStandard">
        <item name="android:paddingLeft">@dimen/margin_standard</item>
        <item name="android:paddingRight">@dimen/margin_standard</item>
        <item name="android:paddingTop">@dimen/margin_short</item>
        <item name="android:paddingBottom">@dimen/margin_short</item>
        <item name="android:layout_marginLeft">@dimen/margin_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
    </style>

    <style name="topBottomStandard">
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>

    <style name="leftRightShort">
        <item name="android:layout_marginLeft">@dimen/margin_short</item>
        <item name="android:layout_marginRight">@dimen/margin_short</item>
    </style>

    <style name="textPadding">
        <item name="android:paddingLeft">@dimen/margin_standard</item>
        <item name="android:paddingRight">@dimen/margin_standard</item>
        <item name="android:paddingTop">@dimen/margin_short</item>
        <item name="android:paddingBottom">@dimen/margin_short</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ratingTextView">
        <item name="android:drawableEnd">@drawable/ic_star</item>
        <item name="android:drawableRight">@drawable/ic_star</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_short</item>
        <item name="android:paddingRight">@dimen/margin_short</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ratingTotalCountTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#CC222222</item>
    </style>


    <style name="circularRatingHeading">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">@dimen/margin_short</item>
        <item name="android:paddingRight">@dimen/margin_short</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="darkPopup" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="popupMenuStyle">@style/popUpMenuDark</item>
    </style>

    <style name="defaultPopup" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="popupMenuStyle">@style/popUpMenuDefault</item>
    </style>

    <style name="popUpMenuDark" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">#BFFAFAFA</item>
        <item name="android:popupBackground">#424242</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
    </style>

    <style name="popUpMenuDefault" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#212121</item>
        <item name="android:popupBackground">#FAFAFA</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">#CCCCCC</item>
        <item name="android:background">@color/colorAppMain</item>
    </style>


</resources>

