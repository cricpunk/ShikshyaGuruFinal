<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Theme 1.    Sign up login screen-->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorAppMain</item>
    </style>

    <!--Theme 2.    Same status and nav bar color-->
    <style name="NavStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!--Theme 3.    Observable scroll blue_toolbar theme-->

    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAppMain</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>