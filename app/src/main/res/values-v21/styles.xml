<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/colorAppMain</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <!--Theme 2.    Same status and nav bar color-->
    <style name="NavStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <!--Theme 3.    Observable scroll blue_toolbar theme-->

    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAppMain</item>
        <!--<item name="colorPrimaryDark">@color/colorAppMain</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>